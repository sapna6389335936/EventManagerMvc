@model AppUser
@{
    ViewData["Title"] = "Register";
    //Layout = "~/Views/Shared/_LandingPageLayout.cshtml";
    ViewBag.ActiveTabId = 4;
}
@section Scripts{
    <script src="~/AppJs/Address.js"></script>
} 

<div class="container">
    <div class="card">
        <div class="card-header text-center bg-dark text-white text-bold">Organiztion Registration </div>
        <div class="card-body">
            <form class="form-horizontal" asp-action="Register" asp-controller="Account" method="post">
                <div class="row form-group">
                    <label class="control-label col-sm-2" asp-for="PhoneNumber"></label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="PhoneNumber" placeholder="Primary Contact Number" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <label class="control-label col-sm-2" asp-for="Email"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" placeholder="Registration mail Id (used for login)" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <label class="control-label col-sm-2" asp-for="Password"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <label class="control-label col-sm-2" asp-for="ConfirmPassword"></label>
                    <div class="col-sm-10">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Re Enter password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-sm-2"> </div>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">SignUp </button>
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>

            </form>
        </div>
        <div class="card-footer text-right bg-secondary text-white "> Already have an account?  &nbsp;  &nbsp;  &nbsp; <a asp-controller="Account" class="btn btn-danger" asp-action="Login">Login </a>  </div>
    </div>
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col-md-4">
                <section>
                </section>
            </div>
        </div>
    </main>
</div>





